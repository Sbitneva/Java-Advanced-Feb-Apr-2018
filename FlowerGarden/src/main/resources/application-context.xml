<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="db.properties" system-properties-mode="OVERRIDE"/>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.url}" />


    </bean>

    <bean id="sqliteBouquetDao" class="com.flowergarden.dao.sqlite.SqliteBouquetDao">
        <property name="dataSource" ref="dataSource" />
    </bean>
    <bean id="sqliteFlowerDao" class="com.flowergarden.dao.sqlite.SqliteFlowerDao">
        <property name="dataSource" ref="dataSource" />
    </bean>
    <bean id="getBouquetPriceService" class="com.flowergarden.service.GetBouquetPriceService"
          autowire="byName">
        <property name="sqliteBouquetDao" ref="sqliteBouquetDao" />
        <property name="sqliteFlowerDao" ref="sqliteFlowerDao" />
    </bean>

    <context:component-scan base-package="com.flowergarden" />
</beans>